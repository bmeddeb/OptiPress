{
  "name": "optipress",
  "version": "0.4.2",
  "description": "WordPress image optimization and safe SVG handling plugin",
  "author": "Ben Meddeb <https://meddeb.me>",
  "license": "MIT",
  "homepage": "https://optipress.meddeb.me",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmeddeb/OptiPress.git"
  },
  "scripts": {
    "build": "npm run build:svg-preview && npm run build:admin",
    "build:svg-preview": "esbuild src/js/svg-preview.js --bundle --minify --outfile=admin/js/svg-preview.bundle.js",
    "build:admin": "esbuild src/js/admin-settings.js --bundle --outfile=admin/js/admin-settings.js",
    "watch": "npm run watch:svg-preview & npm run watch:admin",
    "watch:svg-preview": "esbuild src/js/svg-preview.js --bundle --watch --outfile=admin/js/svg-preview.bundle.js",
    "watch:admin": "esbuild src/js/admin-settings.js --bundle --watch --outfile=admin/js/admin-settings.js",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "esbuild": "^0.20.0"
  },
  "dependencies": {
    "dompurify": "^3.0.0"
  }
}